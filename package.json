{
  "name": "deploy",
  "description": "A Github Action for deploying (Node.js) applications to a VPS.",
  "private": true,
  "scripts": {
    "lint": "eslint src --ext .ts",
    "format": "eslint src --fix",
    "build": "rimraf dist && esbuild src/index.ts --minify --bundle --platform=node --loader:.node=copy --format=cjs --legal-comments=none --outfile=dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/azurydev/deploy.git"
  },
  "author": "Samuel Kopp <opensource@azury.dev> (https://azury.dev)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/azurydev/deploy/issues"
  },
  "homepage": "https://github.com/azurydev/deploy#readme",
  "dependencies": {
    "@actions/core": "^1.9.0",
    "node-ssh": "^12.0.5",
    "slash": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.6",
    "@types/ssh2": "^1.11.4",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "esbuild": "^0.14.50",
    "eslint": "^8.20.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  }
}
